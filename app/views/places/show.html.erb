<div class="container">
  <div class="row">
<div class="booyah-box col-10 offset-1">
<h1><%= @place.name %></h1>
<br/>
<i><%= @place.address %></i>
<br/><br/>
<p><%= @place.description %></p>

<% if @place.latitude.present? && @place.longitude.present? %>
    <script>

      function initMap() {
        var myLatLng = {lat: <%= @place.latitude %>, lng: <%= @place.longitude %>};

        var map = new google.maps.Map(document.getElementById('map'), {
          zoom: 12,
          center: myLatLng
        });

        var marker = new google.maps.Marker({
          position: myLatLng,
          map: map,
          title: 'Hello World!'
        });
      }
    </script>

    <script async defer
    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDe-yFSvMg9YmVNreSgWezO6FeNP2RREg8&callback=initMap">
    </script>

    <div id="map"></div>
<% end %>

<br />

<div class="float-right">
  <% if current_user && current_user == @place.user %>
  <%= link_to 'Edit', edit_place_path(@place), class: 'btn btn-primary' %>
  <%= link_to 'Delete', place_path(@place), method: :delete, data: {confirm: 'Are you sure you want to delete this?'}, class: 'btn btn-danger' %>
  <% end %>
</div>
</div>
</div>
</div>

<div class="clear"></div>

<%= simple_form_for @photo, url: place_photos_path(@place) do |f| %>
    <%= f.input :caption %>
    <%= f.input :picture %>
    <%= f.submit "Add a Photo", class: 'btn btn-primary' %>
<% end %>

<% @place.photos.each do |photo| %>
  <div class="container">
    <div class="row">
      <div class="col-6 col-sm-12">
        <% if photo.caption.present? %>
          <b><%= photo.caption %></b> -
        <% end %>
        <% if photo.picture.present? %>
          <%= image_tag(photo.picture.url) %>
        <% else %>
          The idiot didn't upload a photo. 
        <% end %>
      </div>
    </div>
  </div>
<% end %>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Add a comment</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <%= simple_form_for @comment, url: place_comments_path(@place) do |f| %>
      <div class="modal-body">
          <%= f.input :message %>
          <%= f.input :rating, as: :select, collection: Comment::RATINGS %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <%= f.submit "Add a Comment", class: 'btn btn-primary' %>
      </div>
      <% end %>
    </div>
  </div>
</div>

<div class="container">
<div class="row">
  <div class="col-10 offset-1">
<h1 class="float-left">Comments</h1>

<!-- Button trigger modal -->
<button type="button" class="btn btn-primary btn-lg float-right" data-toggle="modal" data-target="#exampleModal">
  Add a comment
</button>
</div>
</div>
</div>

<div class="clear"></div>

<% @place.comments.each do |comment| %>
<div class="container">
    <div class="row">
      <div class="col-6 col-sm-12">
    <blockquote>
      <% if comment.humanized_rating.present? %>
      <b><%= comment.humanized_rating %></b> -
      <% end %>
      <%= comment.message %>
      <small><%= comment.user.email %></small>
    </blockquote>
  </div>
</div>
  </div>
  <% end %>
